<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--验证码视图-->
  <declare-styleable name="VerifyView">
    <!--验证码字体大小-->
    <attr name="codeTextSize" format="dimension|reference"/>
    <!--验证码背景色-->
    <attr name="codeBackground" format="color|reference"/>
    <!--验证码长度-->
    <attr name="codeLength" format="integer"/>
    <!--是否包含字符-->
    <attr name="isContainChar" format="boolean"/>
    <!--干扰点的数量-->
    <attr name="pointNum" format="integer"/>
    <!--干扰线的数量-->
    <attr name="lineNum" format="integer"/>
  </declare-styleable>
</resources>